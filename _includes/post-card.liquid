<article class="post-card">
    <span class="post-card-date">{{post.data.date}}</span>
    <h2 class="post-card-title">
        <a href="{{ post.url }}">
            {{ post.data.title }}
        </a>    
    </h2>
    <span class="post-card-author">{{post.data.author}}</span>
    <p class="post-card-intro">
        {{post.templateContent | truncatewords: 50, '...'}}
    </p>
</article>