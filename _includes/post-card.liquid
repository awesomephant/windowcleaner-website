<article class="post-card">
    <span class="post-card-date">{{post.data.date | date: "%B %d, %Y"}}</span>
    <h2 class="post-card-title">
        <a href="{{ post.url }}">
            {{ post.data.title }}
        </a>    
    </h2>
    <span class="post-card-author">{% include author with post.data.author %}</span>
    <p class="post-card-intro">
    </p>
</article>