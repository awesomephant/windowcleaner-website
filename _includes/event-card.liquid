<article class="post-card">
    {% if post.data.thumb %}
    <img class='post-card-thumb' src="{{post.data.thumb}}" alt="">
    {% endif %}
    <h2 class="post-card-title">
        <a href="{{ post.url }}">
            {{ post.data.title }}
        </a>    
    </h2>
    <aside class="post-card-meta">
        <span class="post-card-date">{{post.data.event.start | date: "%B %d %Y, %H:%M GMT%z"}} â€“ {{post.data.event.end | date: "%B %d %Y, %H:%M GMT%z"}}</span>
        <span>{% for tag in tags %}<a href="/tags/{{tag | slug}}/" class='tag'>#{{tag}}</a>{% endfor %}</span>
    </aside>
</article>