<article class="post-card event-card" data-start="{{post.data.event.start}}" data-end="{{post.data.event.end}}">
    {% include event-status %}
    {% if post.data.thumb %}
    <img class='post-card-thumb' src="{{post.data.thumb}}" alt="">
    {% endif %}
    <h2 class="post-card-title">
        <a href="{{ post.url }}">
            {{ post.data.title }}
        </a>
    </h2>
    <aside class="post-card-meta">
        {% assign dateFormat = "%B %d %Y, %H:%M"%}
        <span class="post-card-date">
            {{post.data.event.start | date: dateFormat}} â€“ {{post.data.event.end | date: dateFormat }}
        </span>
        <span>{% for tag in tags %}<a href="/tags/{{tag | slug}}/" class='tag'>#{{tag}}</a>{% endfor %}</span>
    </aside>
</article>