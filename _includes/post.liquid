---
layout: base
---

<article class="post">
    <header class="post-header">
        <h2 class="post-title">{{title}}</h2>
        {% if intro %}
        <p class="post-intro">{{intro}}</p>
        {% endif %}
        <ul class="post-meta">
            <li>
                By {{author}}
            </li>
            <li>{{date | date: "%B %d, %Y"}}</li>
        </ul>
    </header>
    <main class="post-content">
        {{ content | safe }}
    </main>
    <footer class="post-footnotes">
        <h2>Notes</h2>
    </footer>
</article>