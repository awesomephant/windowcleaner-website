<tr class="references-row">
    <td class='reference-title'>{{ref.Title}}</td>
    <td class='reference-date'>{{ref.Date}}</td>
    <td class='reference-location'>{{ref.Location}}</td>
    <td class='reference-name'>{{ref.Name}}</td>
    <td class='reference'>
        <a href="{{ref.Link}}">
            {{ref.Link | replace: 'https://', '' | replace: 'http://', '' | replace: 'www.', '' | truncate: 80, '...'}}
        </a>
    </td>
    <td>
        {% if ref.tags[1] %}
        {% for tag in ref.tags %}
            <a href='/tags/{{tag}}' class="reference-tag">#{{tag}}</a>
        {% endfor %}
        {% endif %}
    </td>
</tr>